    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Build",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "python -m build",
            "console": "integratedTerminal",
        },
        {
            "name": "Python: Release",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "python -m twine upload --config-file .pypirc dist/*",
            "console": "integratedTerminal",
        },
        {
            "name": "Python: Test Release",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "python -m twine upload --config-file .pypirc --repository testpypi dist/*",
            "console": "integratedTerminal",
        }
    ]
}